# Docker Environment Configuration for FACEIT Bot

# Telegram Bot Settings
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=

# FACEIT API Settings
FACEIT_API_KEY=your_faceit_api_key_here
FACEIT_API_BASE_URL=https://open-api.faceit.com/data/v4

# Database Settings (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://faceit_user:faceit_password@postgres:5432/faceit_bot
DB_HOST=postgres
DB_PORT=5432
DB_NAME=faceit_bot
DB_USER=faceit_user
DB_PASSWORD=faceit_password

# Redis Settings
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Application Settings
LOG_LEVEL=INFO
DEBUG=False
ENVIRONMENT=docker

# Performance Settings
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30
CACHE_TTL_SECONDS=300

# Queue Settings (for workers)
WORKER_QUEUE_CONNECTION=redis://redis:6379/1
DEFAULT_QUEUE_NAME=default
PRIORITY_QUEUE_NAME=priority
BULK_QUEUE_NAME=bulk

# Monitoring Settings
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true
PROMETHEUS_PORT=8080

# Security Settings
RATE_LIMIT_PER_MINUTE=60
MAX_REQUESTS_PER_USER=100

# Feature Flags
ENABLE_MATCH_ANALYSIS=false
ENABLE_PREMIUM_FEATURES=false
ENABLE_BACKGROUND_WORKERS=false
