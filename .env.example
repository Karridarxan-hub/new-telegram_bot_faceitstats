# FACEIT Telegram Bot Configuration Template
# ============================================
# Скопируйте этот файл в .env.docker и заполните реальными значениями

# Telegram Bot Token (получить у @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# FACEIT API Key (получить на developers.faceit.com)
FACEIT_API_KEY=your_faceit_api_key_here

# Admin Configuration (ваш Telegram user ID)
ADMIN_USER_IDS=123456789

# Redis Configuration (Upstash Cloud Redis)
REDIS_URL=rediss://default:your_upstash_password@your_upstash_host:6379/0

# Database Configuration (Supabase Cloud PostgreSQL)
# Note: statement_cache_size=0 required for pgbouncer compatibility
DATABASE_URL=postgresql+asyncpg://postgres:your_supabase_password@db.your_project.supabase.co:5432/postgres?statement_cache_size=0

# Logging Configuration
LOG_LEVEL=INFO

# Bot Configuration
CHECK_INTERVAL_MINUTES=10

# Optional: Telegram Chat ID for notifications
TELEGRAM_CHAT_ID=

# Queue settings (Upstash Redis база 1 для очередей)
QUEUE_REDIS_URL=rediss://default:your_upstash_password@your_upstash_host:6379/1
QUEUE_MAX_WORKERS=3
QUEUE_ENABLE_MONITORING=true

# Version
VERSION=1.0.0

# Environment
ENVIRONMENT=production
DEBUG=false